@model RefUnitedIVRPlatform.Web.Models.IVRProfileViewModel

@{
    ViewBag.Title = "Info";
}

<h2>Info for @Model.PhoneNumber</h2>

<strong>Profile Info</strong>
<table class="table table-bordered">
  <tr>
    <td>ProfileId</td>
    <td>@Model.ProfileId</td>
  </tr>
    <tr>
    <td>PIN</td>
    <td>@Model.PIN</td>
  </tr>
    <tr>
    <td>Culture</td>
    <td>@Model.Culture</td>
  </tr>
</table>

<strong>Recording</strong>
<table class="table table-bordered">
  <tr>
    <td>From</td>
    <td>To</td>
    <td>Url</td>
  </tr>
@foreach (var rec in Model.Recordings)
{
  <tr>
    <td>@rec.FromProfileId</td>
    <td>@rec.ToProfileId</td>
    <td>@rec.Url</td>
  </tr>
}
@if (Model.Recordings.Count == 0)
{
  <tr>
    <td colspan="3">No recordings</td>
  </tr>
}
</table>