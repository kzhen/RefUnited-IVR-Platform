@model RefUnitedIVRPlatform.Web.Models.IVRProfileViewModel

@{
  ViewBag.Title = "Info";
}

<h2>Info for @Model.Profile.FullName</h2>

<strong>Profile Info</strong>

<table class="table table-bordered">
  <tr>
    <td>ProfileId</td>
    <td>@Model.Profile.ProfileId</td>
  </tr>
  <tr>
    <td>Full Name</td>
    <td>@Model.Profile.FullName</td>
  </tr>
  <tr>
    <td>PIN</td>
    <td>@Model.Profile.PIN</td>
  </tr>
  <tr>
    <td>Culture</td>
    <td>@Model.Profile.Culture</td>
  </tr>
  <tr>
    <td>Phone Number</td>
    <td>@Model.Profile.PhoneNumber</td>
  </tr>
</table>



<strong>Recording</strong>
<table class="table table-bordered">
  <tr>
    <td>From</td>
    <td>To</td>
    <td>Url</td>
  </tr>
  @foreach (var rec in Model.Profile.Recordings)
  {
    <tr>
      <td>@rec.FromProfileId</td>
      <td>@rec.ToProfileId</td>
      <td>@rec.Url</td>
    </tr>
  }
  @if (Model.Profile.Recordings.Count == 0)
  {
    <tr>
      <td colspan="3">No recordings</td>
    </tr>
  }
</table>
