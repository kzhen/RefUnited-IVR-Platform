@model RefUnitedIVRPlatform.Web.Models.RegisterModel
@{
  ViewBag.Title = "Register";
}

<p>By registering your details we still store some of your information in our system,
   this will enable you to use the Refugees United IVR Platform.</p>

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary()

  <fieldset>
    <legend>Refugees United - Login</legend>
    <ol>
      <li>
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName)
      </li>
      <li>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
      </li>
    </ol>
    <input type="submit" value="Login" />
  </fieldset>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
