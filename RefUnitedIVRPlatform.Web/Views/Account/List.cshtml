@model List<RefUnitedIVRPlatform.Common.Entities.IVRProfile>

@{
  ViewBag.Title = "List";
}

<h2>IVR Profiles</h2>

<table class="table table-bordered">
  <tr>
    <td>ProfileId</td>
    <td>PhoneNumber</td>
  </tr>
  @foreach (var profile in Model)
  {
    <tr>
      <td>@Html.ActionLink(profile.ProfileId.ToString(), "Info", new { profileId = profile.ProfileId })</td>
      <td>@profile.PhoneNumber</td>
    </tr>
  }
  @if (Model.Count == 0)
  {
    <tr>
      <td colspan="2">No profiles</td>
    </tr>
  }
</table>
